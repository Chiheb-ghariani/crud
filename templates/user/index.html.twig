{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdUser</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>Numero</th>
                <th>Adresse</th>
                <th>Age</th>
                <th>Image</th>
                <th>CodeConfirmation</th>
                <th>ResetToken</th>
                <th>ConfirmationToken</th>
                <th>IsEnabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.idUser }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.mdp }}</td>
                <td>{{ user.numero }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.image }}</td>
                <td>{{ user.codeConfirmation }}</td>
                <td>{{ user.resetToken }}</td>
                <td>{{ user.confirmationToken }}</td>
                <td>{{ user.isEnabled }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'idUser': user.idUser}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'idUser': user.idUser}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
